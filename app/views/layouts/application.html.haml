!!!
%html
  %head
    %meta{'http-equiv' => "X-UA-Compatible", :content => "chrome=1"}
    %title Lifeviz
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'jquery-ui.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.3/jquery-ui.min.js"
    = javascript_include_tag 'jquery.tablesorter', 'jquery.coolinput', 'jquery.address', 'jquery.tipsy', 'tables'
    = javascript_include_tag 'protovis-r3.2'
    = javascript_include_tag 'application'
    = yield :include_javascript
    %script{:type => 'text/javascript'}
      = yield :javascript
  %body
    #barbackground
    #main
      = render :partial => "/shared/top_bar"
      = yield
      = render :partial => "/shared/footer"

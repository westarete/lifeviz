= render :partial => "/shared/header", :locals => { :title => @species.name, :subtitle => "", :flash => flash }

%h2 Adding Adult Weight

- form_for :adult_weight, :url => { :action => :create } do |f|
  .form_input
    = f.label :value, "Adult weight"
    %br
    = f.text_field :value, :class => "text", :style => "width: 50px"
    = f.select :units, options_for_select(["Grams", "Kilograms"], @adult_weight.units)
  
  = render :partial => "/shared/citation_form", :locals => {:f => f}
  
  .form_input
    %button{:type => "submit", :name => "commit", :value => "Create", :class => 'button positive', :id => "create-adult-weight"} Add Adult Weight
    = link_to "Cancel", @species, :class => "button"